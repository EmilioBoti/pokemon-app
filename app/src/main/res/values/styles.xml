<resources>
    <style name="Widget.Theme.PokemonApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.PokemonApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="description">
        <item name="android:layout_gravity">top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/dimen_20</item>
        <item name="android:paddingRight">@dimen/dimen_20</item>
        <item name="android:background">@drawable/bordername</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="titleEvolution">
        <item name="android:layout_marginTop">@dimen/dimen_50</item>
        <item name="android:textSize">@dimen/dimen_50</item>
        <item name="android:textColor">@color/black</item>>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="titleStyle">
        <item name="android:textSize">@dimen/dimen_20</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:layout_gravity">center</item>-->
        <item name="android:layout_marginBottom">@dimen/dimen_10</item>
    </style>
    <style name="itemStyle">
        <item name="android:textColor">@color/blue_search</item>>
    </style>
</resources>