<resources>
    <style name="Widget.Theme.PokemonApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.PokemonApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="boxStyle">
        <item name="android:layout_marginLeft">@dimen/dimen_30</item>
        <item name="android:layout_marginRight">@dimen/dimen_30</item>
    </style>
    <style name="boxes">
        <item name="android:layout_marginBottom">@dimen/dimen_30</item>
    </style>
    <style name="titleEvolution">
        <item name="android:layout_marginTop">@dimen/dimen_50</item>
        <item name="android:textSize">@dimen/dimenString_30</item>
        <item name="android:textColor">@color/black</item>>
        <item name="android:layout_centerHorizontal">false</item>
    </style>
    <style name="titleStyle">
        <item name="android:textSize">@dimen/dimenString_22</item>
        <item name="android:background">@drawable/bordername</item>
        <item name="android:padding">@dimen/dimen_5</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10</item>
    </style>
    <style name="navStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimenString_22</item>
        <item name="android:layout_marginLeft">@dimen/dimen_25</item>
        <item name="android:layout_marginRight">@dimen/dimen_25</item>
    </style>

    <style name="moveStyle">
        <item name="android:layout_margin">@dimen/dimen_10</item>
        <item name="android:paddingLeft">@dimen/dimen_20</item>
        <item name="android:paddingRight">@dimen/dimen_20</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:text">@string/moves</item>
        <item name="android:textSize">@dimen/dimenString_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/bordername</item>
    </style>
</resources>