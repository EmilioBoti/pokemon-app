<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainer"
    android:background="@color/bg_fragment">

    <LinearLayout
        android:id="@+id/goBackContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_fragment"
        android:padding="@dimen/dimen_5"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bg_fragment"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokeInfo"
            android:textSize="@dimen/dimenString_25"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_20"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/goBackContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bg_fragment"
                >
                <ImageView
                    android:id="@+id/pokeImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_500"
                    android:src="@mipmap/ic_launcher_pokemon_zero_foreground"
                    />
            </LinearLayout>
            <!--Pokemon name layout-->
            <LinearLayout
                android:id="@+id/nameContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_40"
                android:paddingTop="@dimen/dimen_20"
                android:paddingRight="@dimen/dimen_40"
                android:paddingBottom="@dimen/dimen_20"
                >

                <TextView
                    android:id="@+id/namePoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimenString_50"
                    />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/descriptionMainContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/dimen_20"
                app:cardElevation="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                >
                <GridLayout
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="@dimen/dimen_10"
                    android:columnCount="3"
                    android:rowCount="3"
                    >

                    <LinearLayout
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="top"
                        style="@style/boxes"
                        >
                        <TextView
                            style="@style/titleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/type"
                            />

                        <LinearLayout
                            android:id="@+id/typePokemon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/boxes"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_30"
                        >
                        <TextView
                            style="@style/titleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/abilities"
                            />

                        <LinearLayout
                            android:id="@+id/abilitiesPoke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="top"
                        style="@style/boxes"
                        >
                        <TextView
                            style="@style/titleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            />

                        <LinearLayout
                            android:id="@+id/weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="top"
                        >
                        <TextView
                            style="@style/titleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/BaseExp"
                            />
                        <LinearLayout
                            android:id="@+id/expPoke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="top"
                        style="@style/boxes"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_30"
                        >
                        <TextView
                            style="@style/titleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/habitat"
                            />

                        <LinearLayout
                            android:id="@+id/habitat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="top"
                        >
                        <TextView
                            style="@style/titleStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/height"
                            />
                        <LinearLayout
                            android:id="@+id/height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>
            </androidx.cardview.widget.CardView>
            <!--Description-->

            <LinearLayout
                android:id="@+id/descriptionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen_50"
                android:layout_marginRight="@dimen/dimen_50"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="@dimen/dimenString_26"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/dimen_10"
                    />
                <TextView
                    android:id="@+id/pokeDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="@dimen/dimenString_15"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/evolutionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dimen_100"
                android:padding="@dimen/dimen_5"
                >
                <TextView
                    style="@style/titleEvolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titleEvolution"
                    android:layout_marginBottom="@dimen/dimenString_10"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/evolutions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>